extends layout

block content
  div(class='comment-top')
    h2 #[span.heading コメントページ ]
  
  div(class='comment-form')
    form(action="/comment" method="post")
      p #[input(id="comment-input" type="text" name="comment" required)] #[button(class="comment-button" type="submit") コメントする]
        
    ul
      each val in commentList.reverse()
        li
          span(class='comment-li') #{val.comment} | #{val.created_at}

      
